<div class="panel panel-default">
	<div class="panel-heading">
        <h3 class="panel-title"><strong>New Joiners</strong></h3>
    </div>
    <div class="panel-body">
    	<div class="row">
		    <% @new_join.each do |user|%>
				<div class="col-md-4 col-xs-6 col-sm-3">
					<div class="row">
						<div class="col-md-12"><%= image_tag user.user_pic.url(:thumb),class:'img-responsive img-thumbnail' %>
							
						</div>
						<div class="col-md-12"><%= user.first_name %> </div>
					</div>
				</div>
			<% end %>
		</div>
	</div>
</div>

