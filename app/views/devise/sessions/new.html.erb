<div class="row">
  <div class="col-md-12"> <h2>Log in</h2></div>
  <div class="col-md-4 col-sm-5">
    <div class="row">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name),:class =>'form-signin') do |f| %>
          <div class="field col-md-7">
            <%= f.label :email %><br />
            <%= f.email_field :email, autofocus: true, class:'form-control input-sm'%>
          </div>

          <div class="field col-md-7 profile-edit">
            <%= f.label :password %><br />
            <%= f.password_field :password, autocomplete: "off", class:'form-control input-sm' %>
          </div>

          <% if devise_mapping.rememberable? -%>
            <div class="field col-md-7 profile-edit">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end -%>
          <div class="actions col-md-7 profile-edit">
            <%= f.submit "Log in",class: 'btn btn-sm btn-primary' %>
          </div>
          <div class="col-md-12">
              <p class="notice"><%= notice %></p>
              <p class="alert"><%= alert %></p>
              <%= render "devise/shared/links" %>
          </div>
        <% end %>
    </div>
  </div>
</div>

