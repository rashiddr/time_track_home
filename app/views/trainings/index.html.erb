<div class="row">
	<div class="col-md-12"><h2>Trainings</h2></div>
	<div class="col-md-12">
		<div class="table-responsive">
			<table class="table table-hover table-bordered">
				<thead class="thead-default">
					<tr>
						<td>Topic</td>
						<td>Trainer</td>
						<td>Date</td>
						<td>Time</td>
						<td>Location</td>
						<td></td>
						<td></td>
					</tr>
				</thead>
				<tbody>
					<% @training.each do |training| %>
						<tr>
							<td><%= training.title %></td>
							<td><%= training.trainer%></td>
							<td><%= training.training_datetime.to_date %></td>
							<td><%= training_duration(training.training_datetime,training.duration) %></td>
							<td><%= training.location %></td>
							<td><%= link_to ('<span class="glyphicon glyphicon-pencil">Edit</span>').html_safe,edit_training_path(training) %></td>
							<td><%= link_to ('<span class="glyphicon glyphicon-remove">Delete</span>').html_safe,training_path(training), method: :delete, data: { confirm: 'Do you really want to delete this training?' },remote:true,class:'destroy_training' %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
			<%= will_paginate @training %>
		</div>
		<h4><%= link_to 'Add New Training',new_training_path, class: "btn btn-primary" %></h4>
	</div>
</div>